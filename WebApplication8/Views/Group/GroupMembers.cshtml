@model List<WebApplication8.Models.UserViewModel>


<div class="container-fluid">
    <div class="row">
        @foreach (var user in Model)
        {
        <div class="col-md-6">
            @Html.Raw("<img style='width:100px; height:100px; border-radius:100%;' src=\"data:image/jpeg;base64,"
                           + Convert.ToBase64String(@user.Avatar) + "\" />")
            <br />

            @Html.ActionLink(user.Name, $"Index/{@user.Id}", "Home")
        </div>
        }
    </div>
</div>
