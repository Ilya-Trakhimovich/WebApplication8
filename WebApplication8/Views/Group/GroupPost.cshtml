@model List<WebApplication8.Models.GroupPostViewModel>


@foreach (var post in Model)
{

    <div class="row div-shadow div-group_post-block" >

        <div class="col-md-2 div-post-autor">
            @Html.Raw("<img style='width:100px; height:100px; border-radius:100%;' src=\"data:image/jpeg;base64,"
                               + Convert.ToBase64String(post.Avatar) + "\" />")
            <br />
            @post.Author
            <br />
            @post.PostDate
        </div>

        <div class="col-md-9 div-post-content">
            @post.Content
        </div>

        <div class="col-md-1 div-post-delete">
            @if (post.authorId == ViewBag.MyId || ViewBag.IsGroupAdmin )
            {
                using (@Html.BeginForm("GroupPostDelete", "Post"))
                {
                    <input type="hidden" name="groupPostId" id="groupPostId" value="@post.Id" />
                    <input type="hidden" name="groupId" id="groupId" value="@post.GroupId"/>
                    <input type="submit" value="Удалить" class="btn btn-default" />
                }
            }
        </div>
  
    </div>
}
