@model List<WebApplication8.Models.UserViewModel>


<div class="container-fluid">
    <div class="row">
        @foreach (var user in Model)
        {
            <div class="col-md-6 div-index-avatar">

                @Html.Raw("<img style='width:100px; height:100px; border-radius:100%;' src=\"data:image/jpeg;base64,"
                            + Convert.ToBase64String(@user.Avatar) + "\" />")
                <br />
                @Html.ActionLink(user.Name, $"Index/{@user.Id}", "Home")

                @if (ViewBag.IsGroupAdmin)
                {
                    using (@Html.BeginForm("DeleteGroupMember", "Group"))
                    {
                        <input type="hidden" name="userId" id="userId" value="@user.Id" />
                        <input type="hidden" name="groupId" id="groupId" value="@ViewBag.GroupId" />
                        <input type="submit" value="Удалить" class="btn btn-default" />
                    }
                }


            </div>
        }
    </div>
</div>