@model List<AppBLL.DataTransferObject.UserProfileDTO>

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_LayoutProfile.cshtml";
}

@using (Html.BeginForm("Users", "Home"))
{
    <input name="searchText" placeholder="Введите имя пользователя" type="search">
    <button type="submit">Поиск</button>
}

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.Raw("<img style='width:100px; height:100px; border-radius:100%;' src=\"data:image/jpeg;base64,"
                        + Convert.ToBase64String(item.Avatar) + "\" />")

            @Html.ActionLink(item.Name, $"Index/{@item.Id}", "Home")
        </td>
    </tr>
    <br />
}

